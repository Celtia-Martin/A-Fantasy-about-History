{{>Header}}

	<header>
		<h1> Nuevos Personajes </h1>
			
		<h4> <center> Logged as: {{name}} </center></h4>
	</header>
		
	<section>
		<h3> Añade la siguiente información para crear un personaje </h3>
	</section>
		
	<form action = "/newPersonaje" method= "post" enctype="multipart/form-data">
		
        <p><center> Nombre del personaje </center></p>
        
        <p><center>
  			<input type= 'text' name= 'nombre'/>
        </center></p>
  		
        <p><center> Rango </center></p>
      	
        <p><center>
		    <input type= 'number' name= 'rango' min= '1' max= '5'/>
        </center></p>
        
        <p><center> Tipo </center></p>
      	
        <p><center>
		    <input type= 'radio' name= 'militar'/>
		    <label for= 'militar'>Militar</label>
		    <input type= 'radio' name= 'diplo'/>
		    <label for= 'diplo'>Diplomático</label>
		    <input type= 'radio' name= 'cultu'/>
		    <label for= 'cultu'>Cultural</label>
		    
		    
		     </center></p>
		      <p><center>
		    <label for="tipo">Tipo de personaje:</label>
				<select id="tipo" name="tipo">
  					<option value="MILITAR">Militar</option>
  					<option value="DIPLOMATICO">Diplomatico</option>
  					<option value="CULTURAL">Cultural</option>

			</select>
        </center></p>
        
        <p><center> Valor Militar </center></p>
      	
        <p><center>
		    <input type= 'number' name= 'vMilitar' min= '1' max= '999'/>
        </center></p>
        
        <p><center> Valor Diplomático </center></p>
      	
        <p><center>
		    <input type= 'number' name= 'vDiplo' min= '1' max= '999'/>
        </center></p>
        
        <p><center> Valor Cultural </center></p>
      	
        <p><center>
		    <input type= 'number' name= 'vCultu' min= '1' max= '999'/>
        </center></p>
        
        <p><center> Precio </center></p>
      	
        <p><center>
		    <input type= 'number' name= 'precio' min= '1' max= '999999'/>
        </center></p>
        
		
		<p><center> Imagen del personaje:</center></p>
		<center><input type='file' name='image' accept=".jpg, .jpeg"/>	</center>
      
        <p><center>
	  		<input type='submit' value= 'Crear Personaje'/>
        </center></p>
	</form>
	
	<footer>
		<p><center>
			<a href="/menuPrincipal"><button class="button button1"> Atrás </button></a>
		</center></p>
	</footer>

{{>Footer}}